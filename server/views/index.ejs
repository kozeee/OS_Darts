<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      /* Center the cards on the screen */
      body,
      html {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      /* Center the text inside the cards */
      .card-text {
        text-align: center;
      }
      .card-title {
        text-align: center;
      }

      /* Custom styles for larger cards */
      .custom-card {
        width: 400px; /* Adjust the width as needed */
        height: 200px; /* Adjust the height as needed */
      }
    </style>
    <title>VA Darts Index</title>
  </head>
  <body>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <div class="container mt-4 fixed-top bg-white">
      <form id="search-form">
        <div class="row">
          <div class="col-md-4">
            <input
              id="Name"
              type="text"
              class="form-control"
              name="Name"
              placeholder="Name"
            />
          </div>
          <div class="col-md-4">
            <select id="Mode" class="form-select" name="mode">
              <option value="">Default</option>
              <option value="singles">Singles</option>
              <option value="doubles">Doubles</option>
            </select>
          </div>
          <div class="col-md-4">
            <select id="Bar" class="form-select" name="bar">
              <option value="">Default</option>
              <option value="rock falls">Rock Falls</option>
              <option value="test bar">Test Bar</option>
            </select>
          </div>
        </div>
      </form>
      <button onclick="searchTournaments()" class="btn btn-primary mt-3">
        Search
      </button>
    </div>
    <div class="container">
      <div id="cards-container"></div>
    </div>
    <script>
      const $ = (x) => document.getElementById(x);
      async function searchTournaments() {
        let data = {};
        let query = {};
        let Count = 0;
        if ($("Name").value != "") {
          query["Name"] = $("Name").value.toLowerCase();
          Count = 1;
        }
        if ($("Mode").value != "") {
          query["Mode"] = $("Mode").value;
          Count = 1;
        }
        if ($("Bar").value != "") {
          query["Bar"] = $("Bar").value;
          Count = 1;
        }
        data["conditionCount"] = Count;
        data["query"] = query;
        clearCards();
        console.log(data);
        const apiResponse = await axios.post(
          "http://localhost:8080/api/tournament/search",
          data
        );
        console.log(apiResponse.data);
        for (const item of apiResponse.data) {
          createCard(item);
        }
      }

      async function fetchTournaments() {
        const apiResponse = await axios.post(
          "http://localhost:8080/tournament/search"
        );
        for (const item of apiResponse.data) {
          createCard(item);
        }
      }

      // Function to create a Bootstrap 5 card for each API response item
      async function createCard(item) {
        const cardContainer = document.getElementById("cards-container");

        const card = document.createElement("div");
        card.classList.add("col-lg-12"); // Adjust the column width as needed
        let cardUrl = "http://localhost:8080/tournament/view/" + item["_id"];
        card.innerHTML = `
                <div class="card mb-4 custom-card"> <!-- Add custom-card class -->
                    <div class="card-body">
                        <h5 class="card-title"><a href="${cardUrl}">${item.Name}</a></h5>
                        <p class="card-text">Mode: ${item.Mode}</p>
                        <p class="card-text">Bar: ${item.Bar}</p>
                        <p class="card-text">Date: ${item.Date}</p>
                    </div>
                </div>
            `;
        cardContainer.appendChild(card);
      }

      function clearCards() {
        const cardsContainer = document.getElementById("cards-container");
        cardsContainer.innerHTML = ""; // Remove all child elements
      }
      fetchTournaments();
    </script>
  </body>
</html>
